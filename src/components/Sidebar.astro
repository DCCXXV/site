---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const projects = await getCollection("projects", ({ id }) => {
    return id.startsWith(`${lang}/`);
});
const latestProjects = projects
    .sort(
        (a: CollectionEntry<"projects">, b: CollectionEntry<"projects">) =>
            b.data.date.valueOf() - a.data.date.valueOf(),
    )
    .slice(0, 4);
---

<section>
    <div id="latest-projects">
        <h2>{t("sidebar.latestProjects")}</h2>
        <div class="content bg-teal">
            <ul>
                {
                    latestProjects.map((project) => (
                        <li>
                            <a href={`/projects/${project.slug}`}>
                                <h3>{project.data.title}</h3>
                                <p>{project.data.description}</p>
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
    <div id="latest-posts">
        <h3>{t("sidebar.latestPosts")}</h3>
        <div class="content bg-yellow"></div>
    </div>
    <div id="stats-for-nerds">
        <h3>{t("sidebar.stats")}</h3>
        <div class="content bg-pink">
            <iframe
                src="https://dccxxv.goatcounter.com?hideui=1"
                style="width: 100%; height: 300px; border: none;"></iframe>
        </div>
    </div>
</section>

<style>
    section {
        margin-right: 1.5rem;
        width: 40%;
        box-sizing: border-box;
    }

    h2 {
        font-size: 1.25rem;
        margin-bottom: 0.25rem;
    }

    #latest-projects,
    #latest-posts,
    #stats-for-nerds {
        background-color: var(--sol-metal);
        border: var(--sol-black) 1px solid;
        padding: 0.5rem;
        width: 100%;
        box-sizing: border-box;
        margin-bottom: 1rem;
    }

    #stats-for-nerds > .content {
        border: var(--sol-black) 4px double !important;
        height: 100%;
    }

    #stats-for-nerds > .content li {
        padding: 0.5rem 0;
    }

    .content {
        height: 400px;
        border: var(--sol-black) 1px solid;
    }

    ul {
        list-style-type: none;
        padding: 0.5rem;
    }

    li {
        width: 100%;
        border-bottom: var(--sol-black) 1px solid;
    }

    a:hover {
        color: var(--sol-blue);
    }

    a {
        text-decoration: none;
        color: var(--sol-black);
    }

    @media (max-width: 768px) {
        section {
            width: 100%;
            margin: 0;
            padding: 1rem;
            box-sizing: border-box;
        }
    }
</style>
