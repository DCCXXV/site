---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const projects = await getCollection("projects", ({ id }) => {
    return id.startsWith(`${lang}/`);
});
const latestProjects = projects
    .sort(
        (a: CollectionEntry<"projects">, b: CollectionEntry<"projects">) =>
            b.data.date.valueOf() - a.data.date.valueOf(),
    )
    .slice(0, 4);
---
<section transition:persist="sidebar">
    <div id="latest-projects">
        <h2>{t("sidebar.latestProjects")}</h2>
        <div class="content bg-teal">
            <ul>
                {
                    latestProjects.map((project) => (
                        <li>
                            <a href=`/projects/${project.slug}`}>
                                <h3>{project.data.title}</h3>
                                <p>{project.data.description}</p>
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
    <div id="latest-posts">
        <h3>{t("sidebar.latestPosts")}</h3>
        <div class="content bg-yellow"></div>
    </div>
    <div id="stats-for-nerds">
        <h3>{t("sidebar.stats")}</h3>
        <div class="content bg-pink">
            <ul class="stats-list">
                <li>
                    <strong>Page views:</strong>
                    <span id="page-views">...</span>
                </li>
                <li>
                    <strong>Time here:</strong>
                    <span id="time-on-page">0s</span>
                </li>
                <li>
                    <strong>Your time:</strong>
                    <span id="user-time"></span>
                </li>
                <li>
                    <strong>Screen:</strong>
                    <span id="screen-res"></span>
                </li>
                <li>
                    <strong>Full stats:</strong>
                    <a href="https://dccxxv.goatcounter.com" target="_blank" rel="noopener">
                        View dashboard →
                    </a>
                </li>
            </ul>
        </div>
    </div>
</section>

<style>
    section {
        margin-right: 1.5rem;
        width: 40%;
        box-sizing: border-box;
    }

    h2 {
        font-size: 1.25rem;
        margin-bottom: 0.25rem;
    }

    #latest-projects,
    #latest-posts,
    #stats-for-nerds {
        background-color: var(--sol-metal);
        border: var(--sol-black) 1px solid;
        padding: 0.5rem;
        width: 100%;
        box-sizing: border-box;
        margin-bottom: 1rem;
    }

    #stats-for-nerds > .content {
        border: var(--sol-black) 4px double !important;
        height: auto;
        padding: 0.5rem;
    }

    #goatcounter-stats {
        margin-bottom: 0.5rem;
    }

    .stats-list {
        list-style: none;
        padding: 0;
        margin: 0;
        font-size: 0.9rem;
    }

    .stats-list li {
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .stats-list li:last-child {
        border-bottom: none;
    }

    .stats-list strong {
        color: var(--sol-black);
    }

    .stats-list span {
        color: var(--sol-dark);
    }

    .stats-list a {
        color: var(--sol-dark);
        text-decoration: none;
        font-weight: 500;
    }

    .stats-list a:hover {
        text-decoration: underline;
    }

    .content {
        height: 400px;
        border: var(--sol-black) 1px solid;
    }

    ul {
        list-style-type: none;
        padding: 0.5rem;
    }

    li {
        width: 100%;
        border-bottom: var(--sol-black) 1px solid;
    }

    a:hover {
        color: var(--sol-blue);
    }

    a {
        text-decoration: none;
        color: var(--sol-black);
    }

    @media (max-width: 768px) {
        section {
            width: 100%;
            margin: 0;
            padding: 1rem;
            box-sizing: border-box;
        }
    }
</style>

<script>
    const loadPageViews = () => {
        const checkGoatCounter = setInterval(() => {
            if (window.goatcounter && window.goatcounter.get_data) {
                clearInterval(checkGoatCounter);

                const path = window.goatcounter.get_data()['p'];
                const xhr = new XMLHttpRequest();

                xhr.addEventListener('load', function() {
                    try {
                        const data = JSON.parse(this.responseText);
                        const elem = document.getElementById('page-views');
                        if (elem) {
                            elem.textContent = data.count || '0';
                        }
                    } catch (e) {
                        console.error('Error loading page views:', e);
                    }
                });

                xhr.open('GET', 'https://dccxxv.goatcounter.com/counter/' + encodeURIComponent(path) + '.json');
                xhr.send();
            }
        }, 100);
    };

    loadPageViews();

    let seconds = 0;
    setInterval(() => {
        seconds++;
        const mins = Math.floor(seconds / 60);
        const secs = seconds % 60;
        const elem = document.getElementById('time-on-page');
        if (elem) {
            elem.textContent = mins > 0 ? `${mins}m ${secs}s` : `${secs}s`;
        }
    }, 1000);

    function updateTime() {
        const elem = document.getElementById('user-time');
        if (elem) {
            elem.textContent = new Date().toLocaleTimeString();
        }
    }
    updateTime();
    setInterval(updateTime, 1000);

    const screenElem = document.getElementById('screen-res');
    if (screenElem) {
        screenElem.textContent = `${window.screen.width}×${window.screen.height}`;
    }
</script>
